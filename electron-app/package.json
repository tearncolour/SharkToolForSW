{
  "name": "sharktools",
  "version": "1.0.0",
  "description": "SharkTools - SolidWorks 辅助工具",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build:vite": "vite build",
    "start": "electron .",
    "build": "npm run build:vite && electron-builder",
    "pack": "electron-builder --dir"
  },
  "author": "SharkTools",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^7.2.7"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "ant-design-vue": "^4.2.6",
    "electron-store": "^8.1.0",
    "vue": "^3.5.25"
  },
  "build": {
    "appId": "com.sharktools.app",
    "productName": "SharkTools",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
